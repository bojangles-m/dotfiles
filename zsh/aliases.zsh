# List
alias ls='ls -F'
alias la='ls -a'
alias l='ls -l'
alias ll='ls -la'

# Other
alias c="clear"
alias e="exit"
alias h="history"
alias hg="history | grep"
alias ssh="ssh -X"

# navigation
alias .="cd /"
alias ..='cd ..'
alias ..2='cd ../..'
alias ..3='cd ../../..'
